<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitycontinue.CompletedProgramActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="197dp"
        android:layout_height="202dp"
        android:layout_marginTop="81dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_success" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView3"
        style="@style/CustomHeadlineCardViewStyle"
        android:layout_width="272dp"
        android:layout_height="112dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            style="@style/CustomQuestionTextViewStyle"
            android:text="Excellent, the program \nwas built successfully. \nWe are ready to start!" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/bt_main_menu"
        android:layout_width="236dp"
        android:layout_height="49dp"
        android:layout_marginTop="150dp"
        android:text="Main menu"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/button_man"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

    <TextView
        android:id="@+id/bt_exit"
        android:layout_width="236dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_man"
        android:gravity="center"
        android:text="Exit"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_main_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>